div(ng-controller='instanceListCtrl as instanceList')
	h1.page-header Instances
	h2.sub-header List
	.clearfix
		button.btn.btn-primary.pull-right(ng-click='instanceList.create()') Create
	.table-responsive
		table.table.table-striped(ng-if='instanceList.list.length')
			thead
				tr
					th.text-center Status
					th Name
					th Count
					th
			tbody
				tr(ng-repeat='instance in instanceList.list')
					td
						p.text-center(ng-if='instance.active')
							span.glyphicon.glyphicon-ok(aria-hidden='true')
						p.text-center(ng-if='!instance.active')
							span.glyphicon.glyphicon-remove(aria-hidden='true')
					td(ng-bind='instance.name')
					td(ng-bind='instance.count')
					td
						.btn-group
							button.btn.btn-default.btn-sm(ng-click='instanceList.edit(instance)') Edit
							button.btn.btn-success.btn-sm(ng-if='instance.active', ng-click='instanceList.toggle(instance)') Disable
							button.btn.btn-primary.btn-sm(ng-if='!instance.active', ng-click='instanceList.toggle(instance)') Enable
							button.btn.btn-danger.btn-sm(ng-click='instanceList.remove(instance)') Remove
		p(ng-if='!instanceList.list.length') No item in list
