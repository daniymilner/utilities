.container(ng-controller='loginCtrl as Ctrl')
	form.form-signin(ng-submit='Ctrl.login()')
		h2.form-signin-heading Please sign in
		label.sr-only(for='inputEmail') Email address
		input#inputEmail.form-control(type='text', placeholder='Login', required='', autofocus='', ng-model='Ctrl.user.username')
		label.sr-only(for='inputPassword') Password
		input#inputPassword.form-control(type='password', placeholder='Password', required='', ng-model='Ctrl.user.password')
		.checkbox
			label
				input(type='checkbox', value='remember-me')
				| Remember me
		button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in