doctype html
html(ng-app='utilities')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name='apple-mobile-web-app-status-bar-style', content='black-translucent')
		meta(name='format-detection', content='telephone=no')
		title Utilities
		link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet', href='css/custom-bootstrap.css')
		link(rel='stylesheet', href='css/custom-login.css')
		link(rel='stylesheet', href='css/app.css')

	body(app-show)
		.main-wrapper(ui-view)
			include common/menu
			.container-fluid
				.row
					.col-sm-3.col-md-2.sidebar
						include common/submenu
					.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
						div(ui-view='main')
		include common/alert
		script(src='bower_components/jquery/dist/jquery.min.js')
		script(src='bower_components/bootstrap/dist/js/bootstrap.min.js')
		script(src='bower_components/angular/angular.min.js')
		script(src='bower_components/angular-cookies/angular-cookies.min.js')
		script(src='bower_components/angular-ui-router/release/angular-ui-router.min.js')
		script(src='bower_components/angular-bootstrap/ui-bootstrap.min.js')
		script(src='bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js')

		script(src='js/app.js')
		script(src='js/factories/app-utils.factory.js')
		script(src='js/factories/app-alert.factory.js')
		script(src='js/factories/app-history.factory.js')
		script(src='js/factories/user/auth-user.factory.js')
		script(src='js/factories/user/current-user.factory.js')
		script(src='js/factories/user/user.factory.js')
		script(src='js/directives/app-show.directive.js')
		script(src='js/controllers/alert.ctrl.js')
		script(src='js/controllers/login.ctrl.js')
		script(src='js/controllers/menu.ctrl.js')
