div(ng-controller='tarifsListCtrl as tarifsList')
	h1.page-header Tarifs
	h2.sub-header List
	.clearfix
		button.btn.btn-primary.pull-right(ng-click='tarifsList.create()') Create
	.table-responsive
		table.table.table-striped(ng-if='tarifsList.list.length')
			thead
				tr
					th Type
					th Cost
					th Instance
					th.text-center Active
					th
			tbody
				tr(ng-repeat='tariff in tarifsList.list')
					td(ng-bind='tariff.type')
					td(ng-bind='tariff.cost')
					td(ng-bind='tariff.instance.name')
					td
						p.text-center(ng-if='tariff.active')
							span.glyphicon.glyphicon-ok(aria-hidden='true')
						p.text-center(ng-if='!tariff.active')
							span.glyphicon.glyphicon-remove(aria-hidden='true')
					td
						.btn-group
							button.btn.btn-default.btn-sm(ng-click='tarifsList.edit(tariff)') Edit
							button.btn.btn-success.btn-sm(ng-if='tariff.active', ng-click='tarifsList.toggle(tariff)') Disable
							button.btn.btn-primary.btn-sm(ng-if='!tariff.active', ng-click='tarifsList.toggle(tariff)') Enable
							button.btn.btn-danger.btn-sm(ng-click='tarifsList.remove(tariff)') Remove
		p(ng-if='!tarifsList.list.length') No item in list
